extends ./layout.jade


block content
  link(rel='stylesheet', href="{% static 'css/track_search_results.css' %}")
  h2 Add more songs!
  .row
    .col-sm-12
      .search-bar
        form(method="GET")
          | {% csrf_token %}
          input#track_query(type='text', name='track_query', placeholder='Press Enter to search')
          .hidden
            button.btn.btn-primary(type='submit') Search
  | {% for track in results %}
  .row.container
    .col-md-12
      .album
        img(src='{{track.album_image}}')
    .col-md-12
      audio(controls)
        source(src='{{ track.preview }}', type='audio/mpeg')
      .below-album
        form(method="POST")
          | {% csrf_token %}
          button.btn-xs(name='track_info', value='{{ track }}', type='submit', class='glyphicon glyphicon-plus')
          span "{{ track.song_title }}" - {{ track.artist }}

  | {% endfor %}

