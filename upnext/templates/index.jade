extends ./layout.jade

block title
  title UpNext Home

block background
  img#bg(src='http://jiexi.co/static/bg.png')

block content
  .centered
    | {% if redirect %}
    h3 ERROR: You must log in before creating a party.
    | {% endif %}

    | {% if anon %}
    h1 To get started, connect to Spotify.
    .row
      .col-sm-12
        .log-in
          a.btn.btn-primary(href="{% url 'social:begin' 'spotify' %}?next=/") Log in with spotify
    | {% else %}
    h1 Know of a party? Look it up here.
    .row
      .col-sm-12
        .search-bar
          form(method="GET")
            | {% csrf_token %}
            .row
              input#query(type='text', name='query', placeholder='Press Enter to search')
            .hidden
              button.btn.btn-primary(type='submit') Search
    | {% endif %}
