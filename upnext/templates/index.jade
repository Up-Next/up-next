extends ./layout.jade

block title
  title UpNext Home

block background
  img#bg(src='http://jiexi.co/static/bg.png')

block content
  .centered
    | {% if anon %}
    h1 To get started, connect to Spotify.
    .row
      .col-sm-12
        .log-in
          a.btn.btn-primary(href="{% url 'social:begin' 'spotify' %}?next={{ request.path }}") Log in with spotify
    | {% else %}
    h1 Know of a party? Look it up here.
    .row
      .col-sm-12
        .search-bar
          input.form-control(placeholder='Find your party!', type='text')
    | {% endif %}
