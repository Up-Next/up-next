doctype html
| {% load staticfiles %}

html(lang="en")
  head
    title="UpNext Homepage"
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css')
    link(rel="stylesheet", href="{% static 'css/index.css' %}")

  body
    .row
      .col-sm-12.header
        h1.title UpNext
    .container
      .row
        if user.loggedIn
          .col-sm-12
              .search-bar
                input.form-control(type="text", placeholder="Find your party!")
        else
          .col-sm-12
            .log-in
              a.btn.btn-primary#thebutton(href='/login') Log in button

